import pandas as pd

# Load the dataset
try:
    df = pd.read_csv('data.csv')
except FileNotFoundError:
    print("Error: data.csv not found. Please ensure the file is in the working directory.")
    exit()

# Group by 'species' and get summary statistics for each group
summary_statistics = df.groupby('species').describe()

# Print the summary statistics
print("Summary statistics for each Iris species:")
print(summary_statistics)
